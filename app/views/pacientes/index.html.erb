
<style>
  h1{
    color: purple;
  }
</style>

<h1>Pacientes</h1>

<table class="table table-condensed table-striped table-bordered">
  <thead>
    <tr>
      <th>Nome</th>      
      <th>Email</th>
      <th>Telefone</th>      
      <th>Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @pacientes.each do |paciente| %>
      <tr>
        <td><%= paciente.nome %></td>      
        <td><%= paciente.email %></td>
        <td><%= paciente.telefone %></td>
       
        <td align="center"><%= link_to 'Mostrar', paciente %> |
        <%= link_to 'Editar', edit_paciente_path(paciente) %> |
        <%= link_to 'Excluir', paciente, method: :delete, data: { confirm: 'Excluir paciente?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Cadastrar Paciente', new_paciente_path %>
