
<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">        
      <h1 align="center"><span class="glyphicon glyphicon-user" style="color: #290A3A"> Pacientes</span></h1>        
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= link_to 'Cadastrar Paciente', new_paciente_path, class: "btn btn-success btn-lg" %>      
      <form class="navbar-form navbar-right" role="search">
        <%= form_tag pacientes_path, :method => 'get', class: 'form-group' do%>
          <%= text_field_tag :search, params[:search], class: 'form-control', placeholder: "Nome do paciente", autofocus: true%>
            <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span>
            Pesquisar
            </button>
        <%end%>
      </form>     
    </div>
  </div>

  <div class="row">   
    <div class="col-md-12"> 
    <table class="table table-condensed table-striped table-bordered">
      <thead>
        <tr>
          <th>Nome</th>      
          <th>Email</th>
          <th>Telefone</th>      
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% @pacientes.each do |paciente| %>
          <tr>
            <td><%= paciente.nome %></td>      
            <td><%= paciente.email %></td>
            <td><%= paciente.telefone %></td>           
            <td>
              <div class="btn-group">         
                <button class="btn btn-default">
                  Opções
                </button> 
                <button data-toggle="dropdown" class="btn btn-default dropdown-toggle">
                  <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to 'Mostrar', paciente%>
                  </li>
                  <li>
                    <%= link_to 'Editar', edit_paciente_path(paciente)%>
                  </li>
                  <li class="divider">
                  </li>
                  <li>
                    <%= link_to 'Excluir', paciente, method: :delete, data: { confirm: 'Excluir paciente do cadastro?' }%>
                  </li>
                </ul>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
  <div align="center">
    <%= will_paginate @pacientes, renderer: BootstrapPagination::Rails, :previous_label => 'Anterior', :next_label => 'Próximo' %>
  </div>
</div>


