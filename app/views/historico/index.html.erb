
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">        
        <div class="col-md-3"> 
          <p id="tamanhodata">Hoje: <em><%= Time.now.strftime("%d/%m/%Y - %H:%M") %></em></p>                
        </div>
        <div class="col-md-6">     
          <h1 align="center"><span class="glyphicon glyphicon-calendar" style="color: #290A3A"> Histórico</span></h1>        
        </div>
        <div class="col-md-3"></div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <%= link_to 'Voltar para Agendamentos', agendamentos_path, class: "btn btn-default btn-lg"%>      
        <form class="navbar-form navbar-right" role="search">
          <%= form_tag agendamentos_path, :method => 'get', class: 'form-group' do%>
            <%= text_field_tag :search, params[:search], class: 'form-control', placeholder: "Nome do paciente", autofocus: true%>
              <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span>
              Pesquisar
              </button>
          <%end%>
        </form>     
      </div>
    </div>

    <div class="row">   
      <div class="col-md-12"> 
      <table class="table table-condensed table-striped table-bordered">
        <thead>
          <tr>
            <th id="headdata">Data</th>
            <th id="headhora">Hora</th>
            <th>Paciente</th>
            <th>Atendente</th>
            <th>Preço</th>          
            <th>Anotações</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @agendamentos.each do |agendamento| %>
            <% if agendamento.hora.past?%>
            <tr>

              <td id="data"><strong><%= agendamento.hora.strftime("%d/%m/%Y") %></strong></td>
              <td id="hora"><%= agendamento.hora.strftime("%H:%M") %></td>
              <td><%= agendamento.nome %></td>      
              <td><%= agendamento.atendente %></td>
              <td><%= agendamento.preco %></td>            
              <td><%= agendamento.anotacao %></td>  
              <td>
                <div class="btn-group">         
                  <button class="btn btn-default">
                    Opções
                  </button> 
                  <button data-toggle="dropdown" class="btn btn-default dropdown-toggle">
                    <span class="caret"></span>
                  </button>
                  <ul class="dropdown-menu">
                    <li>
                      <%= link_to 'Mostrar', agendamento%>
                    </li>
                    <li>
                      <%= link_to 'Editar', edit_agendamento_path(agendamento)%>
                    </li>
                    <li class="divider">
                    </li>
                    <li>
                      <%= link_to 'Excluir', agendamento, method: :delete, data: { confirm: 'Excluir agendamento?' }%>
                    </li>
                  </ul>
                </div>
                </td>          
            </tr>
            <%end%>
           
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
    <div align="center">
      <%= will_paginate @agendamentos, renderer: BootstrapPagination::Rails, :previous_label => 'Anterior', :next_label => 'Próximo' %>
    </div>
  </div>

